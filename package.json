{
  "name": "blogify",
  "version": "1.0.0",
  "description": "Headless blogging platform using AWS Lambda",
  "private": true,
  "workspaces": [
    "functions",
    "frontend",
    "documentation"
  ],
  "scripts": {
    "dev:functions": "yarn workspace @blogify/functions dev",
    "dev:frontend": "yarn workspace @blogify/frontend dev",
    "dev:docs": "yarn workspace documentation start",
    "deploy:functions": "yarn workspace @blogify/functions deploy",
    "deploy:functions:dev": "yarn workspace @blogify/functions deploy:dev",
    "deploy:functions:prod": "yarn workspace @blogify/functions deploy:prod",
    "build:functions": "yarn workspace @blogify/functions type-check",
    "build:frontend": "yarn workspace @blogify/frontend build",
    "build:docs": "yarn workspace documentation build",
    "lint": "yarn workspaces run lint"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "blogging",
    "typescript",
    "nextjs"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "yarn@1.22.0"
}
